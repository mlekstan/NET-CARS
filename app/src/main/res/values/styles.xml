<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Widget.App.BottomAppBar" parent="Widget.Material3.BottomAppBar">
        <item name="backgroundTint">@color/logoLightBlue</item>
    </style>

    <style name="Widget.App.BottomNavigationView.ActiveIndicator" parent="Widget.Material3.BottomNavigationView.ActiveIndicator">
        <item name="android:color">@color/logoBlue</item>
    </style>

    <style name="Widget.App.ExtendedFloatingActionButton" parent="Widget.Material3.ExtendedFloatingActionButton.Icon.Primary">
        <item name="materialThemeOverlay">@style/ThemeOverlay.App.FloatingActionButton</item>
    </style>

    <style name="Widget.App.FloatingActionButton" parent="Widget.Material3.FloatingActionButton.Large.Primary">
        <item name="materialThemeOverlay">@style/ThemeOverlay.App.FloatingActionButton</item>
        <item name="shapeAppearanceOverlay">@style/fabOverlay</item>
    </style>

    <style name="ThemeOverlay.App.FloatingActionButton" parent="">
        <item name="colorContainer">@color/logoBlue</item>
        <item name="colorOnContainer">@color/logoRed</item>
    </style>

    <style name="fabOverlay">
        <item name="cornerSize">4dp</item>

    </style>

</resources>